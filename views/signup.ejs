<%- include("header") %>

    <div class="ui grid">
        <div class="four wide column">

        </div>
        <div class="eight wide column">
            <form class="ui form segment" method="post" enctype="multipart/form-data">
                <div class="field required">
                    <label for="name">User Name</label>
                    <input type="text" id="name" name="name">
                </div>
                <div class="field required">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Password">
                </div>
                <div class="field required">
                    <label for="confirm">Confirm Password</label>
                    <input type="password" id="confirm" name="repassword" placeholder="Confirm Password">
                </div>
                <div class="field required">
                    <label for="gender">Gender</label>
                    <select class="ui compact selection dropdown" name="gender" id="gender">
                    <option value="m">Male</option>
                    <option value="f">Female</option>
                    <option value="x">Secrect</option>
                </select>
                </div>
                <div class="field required">
                    <label for="avatar">Avatar</label>
                    <input type="file" id="avatar" name="avatar">
                </div>
                <div class="field required">
                    <label for="bio">bio</label>
                    <textarea rows="5" id="bio" name="bio" v-model="user.bio"></textarea>
                </div>
                <input type="submit" class="ui button fluid" value="Submit">
            </form>
        </div>
    </div>

    <%- include("footer") %>